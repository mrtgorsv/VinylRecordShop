<Page x:Class="VinylRecordShop.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      WindowTitle="Магазин виниловых пластинок">

    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding WelcomeMessage}"></TextBlock>
            <Button Content="К списку пластинок" Command="{Binding ShowVinylRecordListCommand}"></Button>
            <Button Content="К списку авторов" Command="{Binding ShowAuthorListCommand}"></Button>
            <Button Content="К списку издателей" Command="{Binding ShowPublisherListCommand}"></Button>
        </StackPanel>
    </Grid>
</Page>
